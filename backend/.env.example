# Copy this file to .env and fill in your values.
# For production (e.g. Render): set these in your service's Environment tab.

# MongoDB connection string (required for DB to work after deploy)
MONGODB_URI=mongodb+srv://USER:PASSWORD@cluster0.xxxxx.mongodb.net/DATABASE?retryWrites=true&w=majority

# Secret used to sign and verify JWT tokens (required for login + commenting)
# If missing on the server, you get "Invalid token" when commenting.
JWT_SECRET=your-long-random-secret-at-least-32-chars
